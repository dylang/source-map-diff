{
  "name": "source-map-diff",
  "version": "1.2.0",
  "description": "Compare source maps to understand why a bundle changed in size.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "sourcemap",
    "source-map",
    "bundle size"
  ],
  "bin": {
    "source-map-diff": "lib/cli/index.js"
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "start": "ts-node -T ./src/cli",
    "build": "rm -rf ./lib && tsc -p .",
    "test": "jest && eslint .",
    "lint": "eslint . --fix",
    "version": "rm -rf ./lib && tsc -p ."
  },
  "repository": "https://github.com/dylang/source-map-diff",
  "author": "Dylan Greene",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.1",
    "common-path-prefix": "^3.0.0",
    "got": "^11.8.2",
    "load-json-file": "6.2.0",
    "source-map-explorer": "^2.5.2",
    "text-treeview": "^1.0.1",
    "webtreemap": "^2.0.1",
    "yargs-parser": "20.2.7"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/nodemon": "1.19.0",
    "@types/prettier": "2.2.3",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-xo": "0.36.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-unicorn": "31.0.0",
    "jest": "26.6.3",
    "np": "7.5.0",
    "prettier": "2.2.1",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
