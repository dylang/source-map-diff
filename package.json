{
  "name": "source-map-diff",
  "version": "1.3.1",
  "description": "Compare source maps to understand why a bundle changed in size.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "sourcemap",
    "source-map",
    "bundle size"
  ],
  "bin": {
    "source-map-diff": "lib/cli/index.js"
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "start": "ts-node -T ./src/cli",
    "build": "rm -rf ./lib && tsc -p .",
    "test": "jest && eslint .",
    "lint": "eslint . --fix",
    "version": "rm -rf ./lib && tsc -p ."
  },
  "repository": "https://github.com/dylang/source-map-diff",
  "author": "Dylan Greene",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "common-path-prefix": "^3.0.0",
    "got": "^14.4.7",
    "load-json-file": "7.0.1",
    "source-map-explorer": "^2.5.2",
    "text-treeview": "^1.0.1",
    "webtreemap": "^2.0.1",
    "yargs-parser": "22.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/nodemon": "3.1.1",
    "@types/prettier": "3.0.0",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@typescript-eslint/parser": "8.33.1",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-config-xo": "0.47.0",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.13.0",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-unicorn": "59.0.1",
    "jest": "29.7.0",
    "np": "10.2.0",
    "prettier": "3.5.3",
    "ts-jest": "29.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
