{
    "name": "source-map-diff",
    "version": "2.0.0",
    "description": "Compare source maps to understand why a bundle changed in size.",
    "type": "module",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "default": "./lib/index.js",
            "types": "./lib/index.d.ts"
        }
    },
    "keywords": ["sourcemap", "source-map", "bundle size"],
    "bin": {
        "source-map-diff": "lib/cli/index.js"
    },
    "files": ["src", "lib"],
    "scripts": {
        "start": "node --loader ts-node/esm ./src/cli",
        "build": "rm -rf ./lib && tsc -p .",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "biome check src --files-ignore-unknown=true",
        "lint:fix": "biome check --apply src",
        "format": "biome format src",
        "format:fix": "biome format --write src",
        "biome:ci": "biome ci src --files-ignore-unknown=true"
    },
    "repository": "https://github.com/dylang/source-map-diff",
    "author": "Dylan Greene",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1",
        "common-path-prefix": "^3.0.0",
        "got": "^14.4.7",
        "load-json-file": "7.0.1",
        "text-treeview": "1.0.2",
        "webtreemap": "2.0.1",
        "yargs-parser": "21.1.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.5.3",
        "@types/yargs-parser": "21.0.3",
        "@vitest/coverage-v8": "^3.2.2",
        "ts-node": "10.9.2",
        "typescript": "5.8.3",
        "vitest": "^3.2.2"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    }
}
